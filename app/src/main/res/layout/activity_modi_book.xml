<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.udelphi.librariantool.ModiBookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingRight="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/modibook_BookHeader"
                android:id="@+id/ModiBook_TextViewBookState"
                android:gravity="center_horizontal"
                style="@style/ModiBookTextViewBookStateStyle"
                android:textStyle="bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:baselineAligned="false"
                android:id="@+id/LayoutBook">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/LayoutImage">
                    <ImageView
                        android:layout_width="@dimen/BookImageSize"
                        android:layout_height="@dimen/BookImageSize"
                        android:id="@+id/ModiBookImageViewPhoto"
                        android:background="@drawable/gridrecord"
                        android:padding="1dp"
                        android:contentDescription="BookPhoto"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <!-- Select client !-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/modibook_BookNameCaption_field"
                    android:id="@+id/ModiBookTextViewName"
                    style="@style/LabelCaptionInActivity"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ModiBookEditTextName"
                    android:inputType="text"
                    style="@style/SimpleEditTextStyle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/modibook_BookPublisherCaption_field"
                    android:id="@+id/ModiBookTextViewPublisher"
                    style="@style/LabelCaptionInActivity"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ModiBookEditTextPublisher"
                    android:inputType="text"
                    android:layout_marginBottom="@dimen/EditsMargin"
                    style="@style/SimpleEditTextStyle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/modibook_BookYearCaption_field"
                    android:id="@+id/ModiBookTextViewYear"
                    style="@style/LabelCaptionInActivity"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ModiBookEditTextYear"
                    android:text=""
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_marginBottom="@dimen/EditsMargin"
                    android:maxLength="4"
                    style="@style/SimpleEditTextStyle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/AppCommentCaption"
                    android:id="@+id/ModiBookTextViewComment"
                    style="@style/LabelCaptionInActivity"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ModiBookEditTextComment"
                    android:layout_marginBottom="@dimen/EditsMargin"
                    style="@style/CommentsEditTextStyle"
                    />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/modibook_BookAuthorCaption_field"
                            android:id="@+id/ModiBookTextViewAuthor"
                            style="@style/LabelCaptionInActivity"
                            />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ModiBookAuthorLayout"
                            android:layout_marginBottom="@dimen/EditsMargin"
                            >
                            <Spinner
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/ModiBookSpinnerAuthor"
                                android:singleLine="true"
                                android:layout_weight="1"
                                style="@style/SpinnerStyle"
                                />
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:id="@+id/ModiBookImageButtonModiAuthor"
                                android:src="@drawable/modi"
                                android:contentDescription="@string/btnModiCaption"
                                android:focusableInTouchMode="false"
                                android:clickable="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ModiBook_ModiAuthorFragment"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gridrecord">
                        </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/EditsMargin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/modibook_BookGenreCaption_field"
                            android:id="@+id/ModiBookTextViewGenre"
                            style="@style/LabelCaptionInActivity"
                            />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ModiBookGenreLayout">
                            <Spinner
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/ModiBookSpinnerGenre"
                                android:singleLine="true"
                                android:layout_weight="1"
                                style="@style/SpinnerStyle"
                                />
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:id="@+id/ModiBookImageButtonModiGenre"
                                android:src="@drawable/modi"
                                android:contentDescription="@string/btnModiCaption"
                                android:focusableInTouchMode="false"
                                android:clickable="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ModiBook_ModiGenreFragment"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gridrecord">
                        </LinearLayout>
                    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ModiBookSelectClientLayout">
                <TextView
                    style="@style/LabelCaptionInActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/ModiBook_FullClientNameCaption"
                    android:id="@+id/FragmentClientSelect_TextViewFullClientName" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ModiBookClientLayout"
                    android:layout_marginBottom="@dimen/EditsMargin" >

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ModiBookSpinnerClient"
                        android:singleLine="true"
                        android:layout_weight="1"
                        style="@style/SpinnerStyle"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:id="@+id/ModiBookImageButtonModiClient"
                        android:src="@drawable/modi"
                        android:contentDescription="@string/btnModiCaption"
                        android:focusableInTouchMode="false"
                        android:clickable="true" />
                </LinearLayout>

                <!-- Fragment edit client place !-->
                <LinearLayout
                    android:id="@+id/ModiBook_ModiClientFragment"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gridrecord">
                </LinearLayout>

                <!-- Client edit fragment place !-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:id="@+id/LinearLayoutDates">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1">
                        <TextView
                            style="@style/LabelCaptionInActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/FragmentClientSelectDateCheckOutCaption"
                            android:id="@+id/FragmentClientSelect_DateCheckOut"
                            android:layout_gravity="left" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:background="@drawable/gridrecord"
                            android:id="@+id/ModiBookEditTextCheckoutBook"
                            android:editable="false"
                            android:layout_gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:layout_gravity="right">
                        <TextView
                            style="@style/LabelCaptionInActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/FragmentClientSelectDateReturnCaption"
                            android:id="@+id/FragmentClientSelect_DateReturn"
                            android:layout_gravity="right" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:background="@drawable/gridrecord"
                            android:id="@+id/ModiBookEditTextReturnBook"
                            android:editable="false"
                            android:layout_gravity="right" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
